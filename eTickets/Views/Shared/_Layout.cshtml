<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eTickets.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        #welcomeMessage {
            background-image: url('https://example.com/your-image.jpg'); /* Replace with your image URL */
            background-size: cover;
            background-position: center;
            height: 100vh; /* Full screen height */
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
            z-index: 1000; /* Ensure it is on top */
            position: fixed; /* Fixed position */
            top: 0;
            left: 0;
            width: 100%;
            opacity: 1;
            transition: opacity 1s;
        }

            #welcomeMessage h1 {
                font-size: 4rem; /* Large font size for "eTickets" */
                font-weight: bold;
                margin-bottom: 20px;
            }

            #welcomeMessage p {
                font-size: 1.5rem;
                margin-bottom: 30px;
            }

            #welcomeMessage .btn-primary {
                font-size: 1.25rem;
                padding: 10px 20px;
            }

        #movieListing {
            display: none; /* Initially hide the movie listing */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Movies" asp-action="Index">eTickets</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Movies" asp-action="Index"><i class="badge-info bi-film"></i>Movies</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="Cinemas" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
                                <a class="dropdown-item" asp-controller="Producers" asp-action="Index"><i class="bi bi-headset"></i> Producers</a>
                                <a class="dropdown-item" asp-controller="Actors" asp-action="Index"><i class="bi bi-person-square"></i> Actors</a>
                            </div>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Movies" asp-action="Filter" style="padding-right: 25px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a movie..." aria-label="Search" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <!-- Container for the welcome message -->
            <div id="welcomeMessage">
                <h1>eTickets</h1>
                <p>Your ultimate destination for booking movie tickets online.</p>
                <a class="btn btn-primary" id="shopNowButton" href="/Movies/Index">Shop Now</a> <!-- Updated link -->
            </div>

            <!-- Movie listing section -->
            <div id="movieListing">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - eTickets
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- JavaScript to control the welcome message -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const shopNowButton = document.getElementById("shopNowButton");
            const welcomeDiv = document.getElementById("welcomeMessage");
            const movieListingDiv = document.getElementById("movieListing");

            // Check if the welcome message has already been shown
            if (!localStorage.getItem("welcomeShown")) {
                // Show the welcome message on page load
                welcomeDiv.style.display = "flex";
                movieListingDiv.style.display = "none"; // Hide the movie listing

                // Set the localStorage item to prevent the welcome message from showing again
                localStorage.setItem("welcomeShown", "true");

                // Optionally, fade out the welcome message after 5 seconds
                setTimeout(function () {
                    welcomeDiv.style.opacity = "0";
                    setTimeout(function () {
                        welcomeDiv.style.display = "none"; // Hide the welcome message
                        movieListingDiv.style.display = "block"; // Show the movie listing
                    }, 1000);
                }, 5000); // 5 seconds
            } else {
                // If the welcome message has already been shown, hide it directly
                welcomeDiv.style.display = "none";
                movieListingDiv.style.display = "block"; // Show the movie listing
            }
        });
    </script>
</body>
</html>
